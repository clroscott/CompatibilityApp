    // {
    //     if (r.Id != 0)
    //         await PersonSvc.DeletePersonAsync(r.Id);

    //     rows!.Remove(r);
    // }

    private async Task SaveRating(int personId, int ratingTypeId, decimal? value)
    {
        await PersonSvc.UpsertPersonRatingAsync(personId, ratingTypeId, value, SeasonNumber);

        var row = rows!.First(x => x.PersonId == personId);
        row.Ratings[ratingTypeId] = value;
        StateHasChanged();
    }
    private async Task SeasonChanged()
    {
        await LoadPeopleForSeason();
    }

    private async Task LoadPeopleForSeason()
    {
        var people = await PersonSvc.GetPeopleWithRatingsAsync(SeasonNumber);
        rows = people.Select(p => new PersonRow
        {
            PersonId = p.PersonId,
            FirstName = p.FirstName,
            LastName = p.LastName,
            Age = p.Age,
            ImagePath = p.ImagePath, 
            Ratings = new Dictionary<int, decimal?>(p.RatingsByTypeId)
        }).ToList();


        EnsureAllRatingKeys();
        StateHasChanged();
    }
    private async Task SaveWeightAsync(int ratingTypeId, decimal? newWeight)
    {
        if (ratingTypes is null || newWeight is null)
            return;

        // Update via service (adjust method name/signature to whatever you have)
        await RatingTypeSvc.UpdateWeightAsync(ratingTypeId, newWeight.Value);

        // Update local model so UI stays in sync without reloading everything
        var rt = ratingTypes.FirstOrDefault(x => x.RatingTypeId == ratingTypeId);
        if (rt is not null)
        {
            rt.RatingWeight = newWeight.Value;
        }

        StateHasChanged();
    }
    private void OpenPerson(int personId)
    {
        Nav.NavigateTo($"/dayfiance/person/{personId}");
    }
    private static decimal? ParseDecimalOrNull(object? v)
    => decimal.TryParse(v?.ToString(), out var d) ? d : null;

    // private static int? ParseIntOrNull(object? v)
